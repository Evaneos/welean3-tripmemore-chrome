{
  "manifest_version": 2,

  "name": "Tripmemore",
  "description": "Chrome extension for Tripmemore application",
  "version": "0.1",

  "background": {
    "persistent": false,
    "scripts": [
      "scripts/background.js"
    ]
  },
  "options_page":"screens/settings.html",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "./images/icon.png",
    "default_popup": "./screens/popup.html"
  }
}